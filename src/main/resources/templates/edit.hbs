{{#partial "title"}}Edit{{/partial}}
{{#partial "content"}}
        <section>
            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form method="post" action="/entries/{{blogEntry.slug}}/edit">
                        <label for="title"> </label>
                        <input type="text" name="title" id="title"  value="{{blogEntry.title}}"><br>
                        <label for="content"></label>
                        <textarea rows="5" name="content" id="content">{{blogEntry.content}}</textarea>
                        <label for="tags"></label>
                        <input type="text" name="tags" id="tags" value="{{#each blogEntry.tags}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}"><br>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="/entries/{{blogEntry.slug}}" class="button button-secondary">Cancel</a>
                    </form>
                        <form action="/entries/{{blogEntry.slug}}/delete" method="post" class="delete-form">
                            <input type="submit" value="DELETE ENTRY" class="button-common delete-button" >
                        </form>
                </div>
            </div>
        </section>
{{/partial}}
{{> base.hbs}}
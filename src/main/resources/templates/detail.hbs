{{#partial "title"}}{{ entry.title }}{{/partial}}


{{#partial "content"}}
        <section>
            <div class="container">
                <div class="entry-list single">
                    <article>
                        <h1>{{ blogEntry.title }}</h1>
                        <time datetime={{ blogEntry.date }}>{{ blogEntry.formattedDate }}</time>
                        <div class="entry">
                            <p> {{blogEntry.content}}</p>
                            <div class="tags">
                                    {{#each blogEntry.tags}}
                                        <span class="tag">{{this}}</span>
                                    {{/each}}

                            </div>
                            <p class=""><a class="button edit-button" href="/entries/{{ blogEntry.slug }}/edit">EDIT ENTRY</a></p>

                        </div>
                    </article>
                </div>
            </div>
        </section>
        <section class="entry-comments">
            <div class="container">
                    <h2>Comments</h2>

                    {{#each blogEntry.comments}}
                        <div class="comment">
                            <strong>{{ author }}</strong>
                            <time datetime={{ date }}>{{ formattedDate }}</time>
                            <p>{{ content }}</p>
                        </div>
                    {{/each}}




                    <div class="new-comment">
                        <form method="post" action="/entries/{{ blogEntry.slug }}/comment">
                              <label for="name">Name</label>
                              <input type="text" name="name" id="name"><br>
                              <label for="comment">Comment</label>
                              <textarea rows="5" name="comment" id="comment"></textarea>
                              <input type="submit" value="Post Comment" class="button">
                        </form>
                    </div>
            </div>
        </section>
{{/partial}}
{{> base.hbs}}